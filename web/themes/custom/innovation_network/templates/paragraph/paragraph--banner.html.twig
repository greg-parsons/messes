<div class="banner" 
{% if content.field_media_image|render is not empty %}
    style="background-image: url({{ file_url(content.field_media_image.0['#item'].entity.uri.value) }});"
{% endif %}
    >

    <div class="grid-container">
        <div class="grid-x grid-margin-x align-center medium-align-left">
            <div class="celll small-12">

                <div class="banner-content">
                    {% if content.field_title %}
                        <h1>{{ content.field_title }}</h1>
                    {% endif %}

                    {% if content.field_description %}
                        {{ content.field_description }}
                    {% endif %}


                    {% if content.field_cta_link.0['#title'] and content.field_cta_link.0['#url'] %}
                        {% include directory ~ '/templates/partials/cta.html.twig' with {
                            style: 'primary',
                            title: content.field_cta_link.0['#title'],
                            url: content.field_cta_link.0['#url'],
                            attributes: create_attribute({'class': 'flex-container'})
                          }
                        %}
                    {% endif %}

                    {% if content.field_bubble_text|render is not empty %}
                        <span class="banner-content__bubble">
                            {{ content.field_bubble_text }}
                        </span>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

</div>

