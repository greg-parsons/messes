{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb" class="breadcrumb-navigation">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ol class="breadcrumb-navigation__menu">
    {% for item in breadcrumb %}
      <li class="breadcrumb-navigation__menu-item">
        {% if item.url %}
          <a href="{{ item.url }}" class="breadcrumb-navigation__link">{{ item.text }}</a>
        {% else %}
          <span>{{ item.text }}</span>
        {% endif %}
        {% if not loop.last %}
        <span class="breadcrumb-navigation__separator">&gt;</span>
        {% endif %}
      </li>
    {% endfor %}
    </ol>
  </nav>
{% endif %}
