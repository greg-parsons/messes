{%
    set wrapper_classes = [
        'content-card',
        'content-card--user'
    ]  
%}

{% if sector_classes %}
    {% set wrapper_classes = wrapper_classes|merge(sector_classes) %}
{% endif %}

{% if interest_classes %}
    {% set wrapper_classes = wrapper_classes|merge(interest_classes) %}
{% endif %}

<div {{ attributes.addClass(wrapper_classes) }}>
    <div class="user-contact-card__image">
        {% include directory ~ '/templates/partials/user-profile-pic.html.twig' with { 
            user_id: user.id, 
            username: user.displayname } 
        %}
    </div>

    <h4 class="user-contact-card__name">{{ content.field_full_name }}</h4>

    <div class="user-contact-card__role">
        {{ content.field_role }}
    </div>

    {% include directory ~ '/templates/partials/cta.html.twig' with {
        style: 'secondary',
        title: 'Contact'|t,
        url: path('entity.user.canonical', {'user': user.id}),
        attributes: null
    } %}
</div>